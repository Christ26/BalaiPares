<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/balaiparesreg"
    tools:context=".RegisterActivity">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/progress_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"
        android:orientation="vertical">

        <EditText
            android:padding="10dp"
            android:layout_width="match_parent"
            android:background="@drawable/edittest_bg"
            android:layout_height="50dp"
            android:id="@+id/nameEt"
            android:hint="NAME"
            android:textColorHint="#90a4ae"
            android:inputType="text"
            android:textSize="13sp" />

        <EditText
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittest_bg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/pNumberEt"
            android:hint="PHONE NUMBER"
            android:textColorHint="#90a4ae"
            android:inputType="number"
            android:textSize="13sp" />

        <EditText
            android:padding="10dp"
            android:inputType="text"
            android:background="@drawable/edittest_bg"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/userNameEt"
            android:hint="USERNAME"
            android:textColorHint="#90a4ae"
            android:textSize="13sp" />

        <EditText
            android:padding="10dp"
            android:inputType="textPassword"
            android:background="@drawable/edittest_bg"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/passwordEt"
            android:hint="PASSWORD"
            android:textColorHint="#90a4ae"
           android:textSize="13sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:background="@drawable/btn_bg"
            app:backgroundTint="@null"
            android:onClick="Register"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/cafe_francoise_d"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Have an account Already?"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#4ec3f7"
                android:text="Login here"
                android:onClick="loginhere"
                android:textSize="12sp"/>

        </LinearLayout>




    </LinearLayout>





</RelativeLayout>