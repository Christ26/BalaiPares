<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/balaipares"
    tools:context=".AdminLogin">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/progress_bar"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:onClick="Back"
        android:src="@drawable/ic_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:orientation="vertical">


        <EditText
            android:padding="10dp"
            android:inputType="text"
            android:background="@drawable/edittest_bg"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/admin_userNameEt"
            android:hint="USERNAME"
            android:textColorHint="#90a4ae"
            android:textSize="13sp" />

        <EditText
            android:padding="10dp"
            android:inputType="textPassword"
            android:background="@drawable/edittest_bg"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/admin_passwordEt"
            android:hint="PASSWORD"
            android:textStyle="bold"
            android:textColorHint="#90a4ae"
            android:textSize="13sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:background="@drawable/btn_bg"
            app:backgroundTint="@null"
            android:onClick="Adminlogin"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/cafe_francoise_d"/>



    </LinearLayout>





</RelativeLayout>